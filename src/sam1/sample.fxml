<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button text="Кнопка1" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#btnClick"/>
    <Button text="Кнопка2" GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#sendMsg"/>
    <TextField fx:id="textField" promptText="Введите текст сообщения" GridPane.rowIndex="1" GridPane.columnIndex="0" onAction="#sendMsg"/>
<TextArea fx:id="textArea" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="true"/>


</GridPane>